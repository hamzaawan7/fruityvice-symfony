{% extends 'base.html.twig' %}

{% block title %}Fruit{% endblock %}

{% block body %}
 <div class="container">
     <h2 class="text-center mt-5 mb-3">Show Fruit</h2>
     <div class="card">
        <div class="card-header">
          <a class="btn btn-outline-warning float-right" href="{{ path('app_fruit_index') }}">
            Back To Fruits
          </a>
        </div>
     </div>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ fruit.name }}</td>
            </tr>
            <tr>
                <th>Family</th>
                <td>{{ fruit.family }}</td>
            </tr>
            <tr>
                <th>Genus</th>
                <td>{{ fruit.genus }}</td>
            </tr>
            <tr>
                <th>Order</th>
                <td>{{ fruit.fruitOrder }}</td>
            </tr>
        </tbody>
    </table>
   </div>

{% endblock %}
